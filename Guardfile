# Global variables

COFFEE = 'coffeescript'
INPUT  = 'coffee'
OUTPUT = 'www/js'

INPUT_TEST  = 'test/coffee'
OUTPUT_TEST = 'test'

# Guard::Compass
#

guard COFFEE, input: INPUT,      output: OUTPUT
guard COFFEE, input: INPUT_TEST, output: OUTPUT_TEST

# Guard::Compass
#
guard :compass, configuration_file: './compass_config.rb',
                compile_on_start: true